generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model baby {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  height    Int
  weight    Int
  parents   parent[]
  meal      meal[]
}

model parent {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  babyId    Int
  baby      baby   @relation(fields: [babyId], references: [id])
}

model meal {
  id       Int      @id @default(autoincrement())
  meal     String
  mealQnt  String
  mealTime DateTime
  babyId   Int
  baby     baby     @relation(fields: [babyId], references: [id])
}
