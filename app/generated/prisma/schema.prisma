generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Baby {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  height    Int
  weight    Int
  parents   Parent[]
}

model Parent {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  babyId    Int
  baby      Baby   @relation(fields: [babyId], references: [id])
}
